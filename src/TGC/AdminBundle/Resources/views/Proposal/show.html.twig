{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Proposal</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Coverletter</th>
                <td>{{ entity.coverletter }}</td>
            </tr>
            <tr>
                <th>Hourlyrate</th>
                <td>{{ entity.hourlyrate }}</td>
            </tr>
            <tr>
                <th>Duration</th>
                <td>{{ entity.duration }}</td>
            </tr>
            <tr>
                <th>Registrationtimestamp</th>
                <td>{{ entity.registrationtimestamp|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('proposal') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('proposal_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
